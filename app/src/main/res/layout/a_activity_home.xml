<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <!-- Closet Diary -->
    <TextView
        android:id="@+id/closet_diary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"

        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="35dp"

        android:gravity="center_horizontal|center"

        android:text="@string/closet_diary"
        android:textAppearance="@style/closet_diary" />

    <!-- Weather -->
    <LinearLayout
        android:id="@+id/weatherBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_weather_night">


        <LinearLayout
            android:id="@+id/weatherBox_Left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:background="#00ff0000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/weatherBox_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"

                    android:textColor="#ffffffff"

                    android:autoSizeTextType="uniform"/>

            </LinearLayout>

            <TextView
                android:id="@+id/weatherBox_temperature"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"


                android:textColor="#ffffffff"

                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="15dp"
                android:autoSizeMaxTextSize="40dp"/>


            <TextView
                android:id="@+id/weatherBox_minmaxtemperature"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"


                android:textColor="#ffffffff"

                android:autoSizeTextType="uniform"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

            <ImageView
                android:id="@+id/weatherBox_picture"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2.5"/>

            <TextView
                android:id="@+id/weatherBox_weather"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"

                android:textColor="#ffffffff"

                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/weatherBox_Right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:background="#00ff0000">

            <TextView
                android:id="@+id/weatherBox_location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"

                android:textColor="#ffffffff"

                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeMaxTextSize="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src = "@drawable/ic_weather_rain"/>

                    <TextView
                        android:id="@+id/weatherBox_rain"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"

                        android:textColor="#ffffffff"

                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="5dp"
                        android:autoSizeMaxTextSize="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="10dp"
                        android:src = "@drawable/ic_weather_humidity"/>

                    <TextView
                        android:id="@+id/weatherBox_humidity"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"

                        android:textColor="#ffffffff"

                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="5dp"
                        android:autoSizeMaxTextSize="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="10dp"
                        android:src = "@drawable/ic_weather_wind"/>

                    <TextView
                        android:id="@+id/weatherBox_wind"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"

                        android:textColor="#ffffffff"

                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="5dp"
                        android:autoSizeMaxTextSize="15dp"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">
            </View>

        </LinearLayout>

    </LinearLayout>

    <!-- Yesterday, Today, Tomorrow -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

        android:background="#00000000">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!-- yesterday -->
                <Button
                    android:id="@+id/yesterday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:textColor="#ffffffff"
                    android:gravity="top"
                    android:layout_gravity="center"
                    android:background = "@drawable/yesterday"

                    />

                <!-- today -->
                <Button
                    android:id="@+id/today"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:textColor="#ffffffff"
                    android:gravity="top"
                    android:layout_gravity="center"
                    android:background = "@drawable/today"
                    />

                <Button
                    android:id="@+id/tomorrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:textColor="#ffffffff"
                    android:gravity="top"
                    android:layout_gravity="center"
                    android:background = "@drawable/today"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Recent -->
    <LinearLayout
        android:id="@+id/recentBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/recentBox_clothes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"

                    android:text = "최근 추가한 옷"
                    android:textStyle="bold"
                    android:gravity="center_vertical"

                    android:orientation="horizontal"

                    android:background="#00000000" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:background="@drawable/ic_button_more"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/recent_add_clothes1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:src = "@drawable/image_clothes1"/>

                <ImageView
                    android:id="@+id/recent_add_clothes2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:src = "@drawable/image_clothes2"/>

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recentBox_coordinate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"

                    android:text = "최근 추가한 코디"
                    android:textStyle="bold"
                    android:gravity="center_vertical"

                    android:background="#00000000" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:background="@drawable/ic_button_more"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recent_add_coordinate1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:src = "@drawable/image_clothes3"/>

                <ImageView
                    android:id="@+id/recent_add_coordinate2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:src = "@drawable/image_clothes4"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- tab_bar -->
    <LinearLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- home -->
        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/ic_button_home_dark"
            android:background="#00ff0000"/>

        <!-- style -->
        <ImageButton
            android:id="@+id/style_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/ic_button_style"
            android:background="#00ff0000"/>

        <!-- closet -->
        <ImageButton
            android:id="@+id/closet_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/ic_button_my_closet"
            android:background="#00ff0000"/>

        <!-- diary -->
        <ImageButton
            android:id="@+id/diary_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/ic_button_user"
            android:background="#00ff0000"/>
    </LinearLayout>

</LinearLayout>
